                                    <VBox styleClass="box-form-item-box">
                                       <children>
                                          <VBox styleClass="box-form-item">
                                             <children>
                                                <Label text="Position">
                                                   <font>
                                                      <Font size="18.0" />
                                                   </font>
                                                </Label>
                                                <HBox styleClass="box">
                                                   <children>
                                                      <Spinner fx:id="fieldPosX" />
                                                      <Label text=":" />
                                                      <Spinner fx:id="fieldPosY" />
                                                   </children>
                                                </HBox>
                                             </children>
                                          </VBox>
                                          <VBox styleClass="box-form-item">
                                             <children>
                                                <Label text="Taille" />

                                                   <children>
                                                      <Spinner fx:id="fieldWidth" />
                                                      <Label text="X" />
                                                      <Spinner fx:id="fieldHeight" />
                                                   </children>
                                                </HBox>
                                             </children>
                                          </VBox>
                                       </children>
                                    </VBox>
                                    <VBox styleClass="box-form-item-box">
                                       <children>
                                          <JFXCheckBox fx:id="checkContour" selected="true" text="Contour" />
                                          <VBox styleClass="box-form-item">
                                             <children>
                                                <Label text="Couleur du contour" />
                                                <ColorPicker fx:id="colorContour" />
                                             </children>
                                          </VBox>
                                          <VBox styleClass="box-form-item">
                                             <children>
                                                <Label text="Epaisseur du contour" />
                                                <Spinner fx:id="tailleContour" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </VBox>
                                    <VBox styleClass="box-form-item-box">
                                       <children>
                                          <JFXCheckBox fx:id="checkRemplissage" text="Remplissage" />
                                          <VBox styleClass="box-form-item">
                                             <children>
                                                <Label text="Couleur de remplissage" />
                                                <ColorPicker fx:id="colorRemplissage" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>
